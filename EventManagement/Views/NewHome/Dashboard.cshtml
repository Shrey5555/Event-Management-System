@model List<EventManagement.ViewModels.FeaturedEventViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eventify - Dashboard</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container-fluid mx-0 px-0">
        <nav class="navbar navbar-expand-lg navbar-dark custom-navbar">
            <a class="navbar-brand mx-2" href="~/NewHome/Index"><i class="bi bi-calendar2-heart mx-1"></i> Eventify</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="bi bi-person-circle" href="~/Identity/Account/Manage" style="color:white; font-size:30px;"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active mt-1" href="~/Identity/Account/Manage">Welcome, @User.Identity.Name!</a>
                        </li>
                        <li class="nav-item">
                            <form id="logoutForm" class="form-inline mt-1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "NewHome", new { area = "" })">
                                <button id="logout" type="submit" class="nav-link btn btn-link text-light border-0">
                                    Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            
        </nav>
    </div>
    <div class="container text-white text-center p-5 fs-5 mb-5">
        <h1>Your Dashboard</h1>
        <p>Explore and manage your events from the dashboard.</p>
        <div class="container action-buttons">
            <a class="btn btn-success" href="~/PrivateEvents/MyEvents">My Private Events</a>
            <a class="btn btn-success" href="/NewHome/MyEvents">My Purchased Events</a>
            <a class="btn btn-success" href="/NewHome/BrowseEvent">Browse Events</a>
            <a class="btn btn-success" href="~/PrivateEvents/Create">Create Event</a>
        </div>
    </div>
    <div class="container text-white">
        <h2 class="text-center">Featured Events</h2>
        <div class="card-deck">
            <div class="row">
                @foreach (var featuredEvent in Model)
                {
                    <div class="col-md-4 mb-3">
                        <a href="/NewHome/BrowseEvent" class="card rounded border-2 border-secondary">
                            <div class="card-body text-center" style="background-color: #3498db; height:160px;">
                                <div class="card-title text-white h4 mt-4">@featuredEvent.EventName</div>
                                <div class="card-text text-white text-left">@featuredEvent.Description</div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
